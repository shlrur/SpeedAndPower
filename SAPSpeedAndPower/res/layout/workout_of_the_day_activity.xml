<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_2"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/txt_background_1"
        android:gravity="center"
        android:text="Workout of the Day"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/wod_date_yesterday"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/date_pick_selector"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
        
        <View 
            android:layout_width="3px"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"/>

        <LinearLayout
            android:id="@+id/wod_date_pick"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="@drawable/date_pick_selector"
            android:orientation="horizontal" >

            <View
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/wod_date"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/calendar_1" />
        </LinearLayout>
        
        <View 
            android:layout_width="3px"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/wod_date_tomorrow"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/date_pick_selector"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/wod_pager"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/wod_btn_1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="스트\n렝스" />

        <Button
            android:id="@+id/wod_btn_2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="완초삽" />

        <Button
            android:id="@+id/wod_btn_3"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="역도" />

        <Button
            android:id="@+id/wod_btn_4"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="특수\n부대" />

        <Button
            android:id="@+id/wod_btn_5"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="보디\n빌딩" />
    </LinearLayout>

</LinearLayout>